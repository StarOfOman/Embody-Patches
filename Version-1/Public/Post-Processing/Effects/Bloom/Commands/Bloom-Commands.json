{
  "api": "Bloom",
  "transport": "Pixel Streaming DataChannel (WebRTC)",
  "endpoints": {
    "POST": [
      {
        "command": "BloomInt_{value}",
        "description": "Sets bloom intensity",
        "params": { "value": "number - float 0 to 10, step 0.001" }
      },
      {
        "command": "Bloom_Size_{value}",
        "description": "Sets bloom size/spread",
        "params": { "value": "number - float 0 to 5, step 0.1" }
      }
    ],
    "GET": []
  }
}
